namespace System
{
    public nothrow inline long Align(long n, long alignment)
    {
        #assert(alignment > 0);
        return (n + alignment - 1) & -alignment;
    }

    public nothrow int StrLen(const char* s)
    {
        int len = 0;
        if (s != null)
        {
            while (*s != '\0')
            {
                ++len;
                ++s;
            }
        }
        return len;
    }
    
