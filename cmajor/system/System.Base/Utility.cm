    public nothrow long MemGrow(long size)
    {
        if (size < 8)
        {
            return 8;
        }
        else if (size < 64)
        {
            return 64;
        }
        else if (size < 512)
        {
            return 512;
        }
        else if (size < 4096)
        {
            return 4096;
        }
        else
        {
            return 2 * Align(size, 4096);
        }
    }
